<!DOCTYPE html>
<html>
<head>
    <title>Productos en Tiempo Real</title>
</head>
<body>
    <h1>Productos en Tiempo Real</h1>
    <ul>
        {{#each products}}
            <li>{{title}}</li>
        {{/each}}
    </ul>
    <form action="/realtimeproducts" method="post">
        <input type="text" name="title" placeholder="TÃ­tulo del Producto" required>
        <input type="submit" value="Agregar Producto">
    </form>
</body>
<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();
    socket.on('productsUpdated', (products) => {
        // Actualiza la lista de productos en tiempo real
        const productList = document.querySelector('ul');
        productList.innerHTML = products.map(product => `<li>${product.title}</li>`).join('');
    });
</script>
</html>
